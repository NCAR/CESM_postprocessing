<h3>{{ title }}</h3>

<table class="plot">
<th colspan="{{ cols }}">3D Fields, Zonally-Averaged</th>
{% for t in plot_table %}
    <tr>
    {% for i in t %}
        {% if i in label_list %}
           <td><b>{{ i }}</b></td>
        {% elif 'Error' in i %}
           <td>{{ i|replace('- Error', ' ') }}</td>
        {% else %}
           <td><a href="{{ i }}.{{ imgFormat }}">{{ i }}</a></td>
        {% endif %}
    {% endfor %}
    </tr>
{% endfor %}
</table>

<hr>
