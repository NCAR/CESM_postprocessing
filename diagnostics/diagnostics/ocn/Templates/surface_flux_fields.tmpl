<h3>{{ title }}</h3>

<table class="plot">
<th colspan="{{ cols }}">Surface Fluxes (Lat, Lon)</th>
{% for t in plot_table %}
    <tr>
    {% for i in t %}
        {% if 'Error' in i %}
           <td>{{ i|replace('- Error', ' ') }}</td>
        {% elif i == '' %}
           <td></td>
        {% else %}
           <td><a href="{{ i }}.{{ imgFormat }}">{{ i }}</a></td>
        {% endif %}
    {% endfor %}
    </tr>
{% endfor %}
</table>

